{
  "name": "InstaLoad",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Download Instagram pictures",
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "page_action": {
    "default_icon": {
      "16": "images/icon16.png",
      "32": "images/icon32.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "permissions": ["activeTab", "declarativeContent"],
  "content_scripts": [
    {
      "matches": ["*://*.instagram.com/*"],
      "js": ["inject.js"]
    }
  ],
  "icons": {
    "16": "images/icon16.png",
    "32": "images/icon32.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}
